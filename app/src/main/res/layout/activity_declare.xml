<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/camera_btn"
        android:src="@drawable/baseline_photo"/>

    <EditText
        android:background="@drawable/edit_round"
        android:textColor="#FFFF"
        android:id="@+id/input_secteur"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/camera_btn"
        android:layout_alignStart="@+id/input_type"
        android:layout_marginTop="43dp"
        android:hint="Secteur d'incident"
        android:textSize="16sp"
        android:padding="10dp"
        />

    <Spinner
        android:id="@+id/input_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_round"
        android:layout_marginTop="227dp" />

    <Spinner
        android:id="@+id/input_detail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="233dp"
        android:background="@drawable/edit_round"/>
       " />


    <TextView
        android:id="@+id/langitude"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/input_secteur"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="162dp"
        android:hint="longitude"
        android:padding="10dp"
        android:background="@drawable/edit_round"/>

    <TextView
        android:id="@+id/latitude"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/langitude"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="127dp"
        android:hint="latitude"
        android:padding="10dp"
        android:background="@drawable/edit_round"/>

    <ImageView
        android:id="@+id/map_btn"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/langitude"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="35dp"

        android:src="@drawable/baseline_location" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
         android:id="@+id/input_description"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="74dp"
        android:hint="Description"
        android:textStyle="italic"
        android:background="@drawable/edit_round"/>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/input_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-74dp"
        android:drawableLeft="@mipmap/ic_pos_tv"
        android:text="Declarer" />
</RelativeLayout>